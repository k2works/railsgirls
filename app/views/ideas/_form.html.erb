    <%= f.label :picture, class: "col-sm-2 form-label"  %>
    <div class="col-sm-10">
      <%= f.file_field :picture %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default'%>
